<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
      const name = localStorage.getItem('name');
      if (name === null) {
        window.location.replace('http://localhost:3000/login');
      }
    </script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      .main {
        background-color: #b6dca3;
        display: flex;
        justify-items: center;
        align-items: center;
        width: 100vw;
        height: 100vh;
      }
      .container {
        padding: 80px 20px;
        background-color: white;
        width: 400px;
        height: 500px;
        border-radius: 3%;
        box-shadow: 4px 4px 2px rgb(82, 79, 79);
      }
      input {
        text-align: center;
      }
      button {
        width: 200px;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <div class="main">
      <div class="container">
        <div
          class="header"
          style="display: flex; justify-content: center; margin-bottom: 50px"
        >
          <h3 id="hello">Xin chào</h3>
        </div>
        <div style="display: flex; align-items: center; flex-direction: column">
          <div class="body-form w-75">
            <div class="input-group">
              <input
                id="roomId"
                type="text"
                class="form-control w-75"
                placeholder="Nhập mã phòng"
                aria-label="Username"
                aria-describedby="basic-addon1"
              />
            </div>
          </div>
          <div style="margin-top: 30px">
            <div>
              <button type="button" class="btn btn-secondary" id="enterRoom">
                Vào phòng
              </button>
            </div>
            <div style="margin-top: 15px">
              <button id="createRoom" type="button" class="btn btn-info">
                Tạo phòng
              </button>
            </div>
            <div style="margin-top: 80px; text-align: center">
              <a href="http://localhost:3000/login">Đổi tên</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      const host = 'http://localhost:3000';
      document.getElementById('hello').innerHTML =
        'Xin chào : ' + `<span style="color: red;">${name}<span>`;

      const createRoomButton = document.getElementById('createRoom');
      createRoomButton.onclick = async () => {
        let dealerId = localStorage.getItem('dealerId');
        if (!dealerId) {
          dealerId = Math.floor(10000 + Math.random() * 90000);
          localStorage.setItem('dealerId', dealerId);
        }
        const name = localStorage.getItem('name');
        try {
          const res = await axios.post(`${host}/room`, { dealerId, name });
          const { roomId } = res.data;
          localStorage.setItem('roomId', +roomId);

          window.location.replace(`${host}/room/${roomId}?id=${dealerId}`);
        } catch (error) {
          console.log(error.response.status);
        }
      };

      const enterRoom = document.getElementById('enterRoom');
      enterRoom.addEventListener('click', (e) => {
        const roomId = document.getElementById('roomId').value;
        let playerId = localStorage.getItem('playerId');
        if (!playerId) {
          playerId = Math.floor(10000 + Math.random() * 90000);
          localStorage.setItem('playerId', playerId);
        }
        const name = localStorage.getItem('name');
        window.location.replace(
          `${host}/room/${roomId}?id=${playerId}&name=${name}`
        );
      });
    </script>
    <!-- <script src="/script/home.js"></script> -->
  </body>
</html>
